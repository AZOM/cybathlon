<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.hsr.zedcontrol.MainActivity">

    <LinearLayout
        android:id="@+id/layout_controls_bottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/back"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/button_no_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_state_selector"
            android:text="@string/button_mode_none"
            android:textColor="@color/button_state_selected_textcolor"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_buttons_stairs_modes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_controls_bottom"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_drive_fixed_steering"
            style="@style/ButtonWithDrawable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_state_selector"
            android:drawableEnd="@drawable/ic_steering_fixed"
            android:drawableStart="@drawable/ic_steering_fixed"
            android:text="@string/button_drive_fixed_steering"
            android:textColor="@color/button_state_selected_textcolor"/>

        <Button
            android:id="@+id/button_lift_front_wheels"
            style="@style/ButtonWithDrawable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_state_selector"
            android:drawableEnd="@drawable/ic_stairs_up"
            android:drawableStart="@drawable/ic_stairs_up"
            android:text="@string/button_lift_front_wheels"
            android:textColor="@color/button_state_selected_textcolor"/>

        <Button
            android:id="@+id/button_lift_rear_wheel"
            style="@style/ButtonWithDrawable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_state_selector"
            android:drawableEnd="@drawable/ic_stairs_up"
            android:drawableStart="@drawable/ic_stairs_up"
            android:text="@string/button_lift_rear_wheels"
            android:textColor="@color/button_state_selected_textcolor"/>

        <Button
            android:id="@+id/button_mode_drive_fall_protection"
            style="@style/ButtonWithDrawable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_state_selector"
            android:drawableEnd="@drawable/ic_fall_protection"
            android:drawableStart="@drawable/ic_fall_protection"
            android:text="@string/button_mode_drive_fall_protection"
            android:textColor="@color/button_state_selected_textcolor"/>

        <Button
            android:id="@+id/button_lower_front_wheels"
            style="@style/ButtonWithDrawable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_state_selector"
            android:drawableEnd="@drawable/ic_stairs_down"
            android:drawableStart="@drawable/ic_stairs_down"
            android:text="@string/button_lower_front_wheels"
            android:textColor="@color/button_state_selected_textcolor"/>

        <Button
            android:id="@+id/button_lower_rear_wheel"
            style="@style/ButtonWithDrawable"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_state_selector"
            android:drawableEnd="@drawable/ic_stairs_down"
            android:drawableStart="@drawable/ic_stairs_down"
            android:text="@string/button_lower_rear_wheels"
            android:textColor="@color/button_state_selected_textcolor"/>

    </LinearLayout>

</RelativeLayout>