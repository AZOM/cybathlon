<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_overlay_2"
                android:clickable="true"
                tools:context="ch.hsr.zedcontrol.MainActivity">

    <ImageView
        android:id="@+id/img_seat_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_seat_position"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_seat_position"
        android:gravity="center_horizontal"
        android:text="@string/text_check_seat_position"
        android:textColor="@color/accent"
        android:textSize="20sp"/>

</RelativeLayout>